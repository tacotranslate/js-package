{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"esModuleInterop": true,
		"lib": ["es2017", "es7", "es6", "dom"],
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"strictNullChecks": true,
		"jsx": "react",
		"skipLibCheck": true,
		"declaration": true
	},
	"exclude": ["./node_modules", "./build", "./examples"]
}
