{
	"name": "tacotranslate",
	"description": "Automatically translate your React application in minutes",
	"version": "1.0.0-beta.28",
	"main": "build/index.js",
	"types": "build/index.d.ts",
	"author": "TacoTranslate <hola@tacotranslate.com>",
	"license": "MIT",
	"homepage": "https://tacotranslate.com",
	"repository": {
		"type": "git",
		"url": "https://github.com/tacotranslate/npm-package.git"
	},
	"bugs": {
		"url": "https://github.com/tacotranslate/npm-package/issues",
		"email": "hola@tacotranslate.com"
	},
	"scripts": {
		"build": "tsc --p tsconfig.json",
		"lint": "xo --prettier",
		"fix": "xo --prettier --fix",
		"format": "prettier -w .",
		"format:check": "prettier --check .",
		"typescript:check": "tsc --noEmit --p tsconfig.json",
		"prepublishOnly": "npm run build"
	},
	"dependencies": {
		"isomorphic-dompurify": "^1.2.0"
	},
	"peerDependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@types/react": "^18.0.31",
		"eslint-config-xo": "^0.43.1",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"prettier": "^2.8.7",
		"typescript": "^5.0.2",
		"xo": "^0.53.1"
	},
	"xo": {
		"extends": "xo-react",
		"envs": [
			"commonjs"
		],
		"rules": {
			"no-unused-vars": 2,
			"n/prefer-global/process": 0,
			"node/prefer-global/process": 0,
			"import/extensions": 0
		},
		"overrides": [
			{
				"files": [
					"**/*/next.config.js"
				],
				"rules": {
					"unicorn/prefer-module": 0
				}
			},
			{
				"files": [
					"**/*/next-env.d.ts"
				],
				"rules": {
					"@typescript-eslint/triple-slash-reference": 0
				}
			}
		]
	}
}
